# Dockerfile generated by Vibe Infra
FROM {{ base_image }}

# Set working directory
WORKDIR {{ workdir }}

# Install dependencies
{% if dependencies %}
{% for dep in dependencies %}
RUN {{ dep }}
{% endfor %}
{% endif %}

# Copy application files
COPY . {{ workdir }}

# Additional commands
{% if commands %}
{% for cmd in commands %}
RUN {{ cmd }}
{% endfor %}
{% endif %}

# Expose ports
{% if expose %}
{% for port in expose %}
EXPOSE {{ port }}
{% endfor %}
{% endif %}

# Set entrypoint
{% if entrypoint %}
ENTRYPOINT {{ entrypoint | tojson }}
{% else %}
CMD ["/bin/bash"]
{% endif %}

# Labels
LABEL maintainer="athena"
LABEL generated-by="athena"
